---
// DetalleDestinoPopup.astro
---

<div id="detallePopup" class="fixed inset-0 backdrop-blur-sm bg-black/30 z-50 flex items-center justify-center p-4" style="display: none;">
  <div id="popupContent" class="bg-white rounded-2xl max-w-lg w-full max-h-[90vh] overflow-hidden shadow-2xl transform transition-all duration-300 ease-out">
    <!-- Header del popup -->
    <div class="relative">
      <img id="popupImage" src="" alt="" class="w-full h-48 object-cover" />
      <button 
        id="cerrarPopup" 
        class="absolute top-4 right-4 bg-black bg-opacity-50 hover:bg-opacity-70 text-white rounded-full w-8 h-8 flex items-center justify-center transition"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      
      <!-- Bandera del país -->
      <img 
        id="popupFlag" 
        src="" 
        alt="" 
        class="absolute left-4 bottom-4 h-8 w-10 object-cover shadow-lg rounded"
      />
    </div>
    
    <!-- Contenido del popup -->
    <div class="p-6">
      <div class="flex items-start justify-between mb-4">
        <div>
          <h3 id="popupTitulo" class="text-2xl font-bold text-slate-900 mb-2"></h3>
          <p id="popupPais" class="text-sm text-emerald-600 font-semibold"></p>
        </div>
      </div>
      
      <p id="popupDescripcion" class="text-slate-600 leading-relaxed mb-6"></p>
      
      <!-- Botones de acción -->
      <div class="flex gap-3">
        <button 
          class="flex-1 bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-4 rounded-xl transition"
        >
          Reservar ahora
        </button>
        <button 
          id="cerrarPopupSecundario"
          class="px-6 py-3 border border-slate-300 text-slate-700 hover:bg-slate-50 font-semibold rounded-xl transition"
        >
          Cerrar
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  
  // Funciones del popup
  function abrirPopup(destino) {
    
    const popup = document.getElementById('detallePopup');
    const popupContent = document.getElementById('popupContent');
    const titulo = document.getElementById('popupTitulo');
    const descripcion = document.getElementById('popupDescripcion');
    const pais = document.getElementById('popupPais');
    const imagen = document.getElementById('popupImage');
    const bandera = document.getElementById('popupFlag');
    
    
    if (popup && titulo && descripcion && pais && imagen && bandera) {
      // Establecer contenido
      titulo.textContent = destino.nombre;
      descripcion.textContent = destino.desc;
      pais.textContent = destino.pais;
      imagen.src = destino.cover;
      imagen.alt = destino.nombre;
      bandera.src = destino.bandera;
      bandera.alt = destino.pais;
      
      // Animación de entrada
      popupContent.style.transform = 'scale(0.8)';
      popupContent.style.opacity = '0';
      
      // Mostrar popup
      popup.style.display = 'flex';
      
      // Prevenir scroll del body
      document.body.style.overflow = 'hidden';
      
      // Animar entrada
      setTimeout(() => {
        popupContent.style.transform = 'scale(1)';
        popupContent.style.opacity = '1';
      }, 10);
      
    } else {
      console.error('No se encontraron todos los elementos necesarios'); // Debug
    }
  }
  
  function cerrarPopup() {    
    const popup = document.getElementById('detallePopup');
    const popupContent = document.getElementById('popupContent');
    
    if (popup && popupContent) {
      // Animación de salida
      popupContent.style.transform = 'scale(0.8)';
      popupContent.style.opacity = '0';
      
      // Ocultar después de la animación
      setTimeout(() => {
        popup.style.display = 'none';
        document.body.style.overflow = 'auto';
      }, 300);
    }
  }
  
  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    
    const cerrarBtn = document.getElementById('cerrarPopup');
    const cerrarSecundario = document.getElementById('cerrarPopupSecundario');
    const popup = document.getElementById('detallePopup');
    
    // Cerrar con botón X
    if (cerrarBtn) {
      cerrarBtn.addEventListener('click', cerrarPopup);
    }
    
    // Cerrar con botón secundario
    if (cerrarSecundario) {
      cerrarSecundario.addEventListener('click', cerrarPopup);
    }
    
    // Cerrar al hacer clic en el fondo
    if (popup) {
      popup.addEventListener('click', (e) => {
        if (e.target === popup) {
          cerrarPopup();
        }
      });
    }
    
    // Cerrar con tecla ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        cerrarPopup();
      }
    });
  });
  
  // Hacer funciones globales
  window.abrirPopup = abrirPopup;
  window.cerrarPopup = cerrarPopup;
</script>