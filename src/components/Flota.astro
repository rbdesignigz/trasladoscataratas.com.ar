---
/*
  Componente Flota.astro con vehículos típicos de Argentina
  Ubica fotos en: public/img/flota/<archivo>.jpg
  Imágenes optimizadas para 800x800px
*/
const flota = [
  { modelo: "Fiat Cronos", tipo: "Sedán", cover: "images/auto-cronos.png" },
  { modelo: "Toyota Etios", tipo: "Sedán", cover: "images/auto-etios.png" },
  { modelo: "Chevrolet Spin", tipo: "SUV Compacta", cover: "images/auto-spin.png" },
  { modelo: "Chevrolet Classic", tipo: "Sedán", cover: "images/auto-classic.png" }
];
---
<section id="flota" class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12 bg-secondary/30">
  <div class="py-10">
    <h3 class="text-center text-3xl md:text-4xl font-extrabold text-primary">Nuestra Flota</h3>
    <p class="mt-2 text-primary/70 text-center">Vehículos modernos y seguros para todos tus traslados.</p>
  </div>    

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    {flota.map((v) => (
      <article class="flota-card group rounded-2xl overflow-hidden bg-white border border-beige/30 shadow-sm hover:shadow-xl transition-all duration-300 transform hover:scale-[1.02]">
        <div class="aspect-square w-full bg-lightAccent overflow-hidden relative">
          <img 
            src={v.cover} 
            alt={v.modelo} 
            class="h-full w-full object-cover group-hover:scale-105 transition-transform duration-300" 
            loading="lazy" 
          />
          <div class="absolute top-3 right-3">
            <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-accent/90 text-primary backdrop-blur-sm">
              {v.tipo}
            </span>
          </div>
        </div>
        <div class="p-4 text-center">
          <h4 class="text-lg font-bold text-primary">{v.modelo}</h4>
        </div>
      </article>
    ))}
  </div>
</section>